---
import { exercises } from "@cv";
import Layout from "@/layouts/Layout.astro";

export function getStaticPaths() {
  return exercises.map(({ id }) => ({
    params: { id },
  }));
}

const id = Astro.params.id;
const exercise = exercises.find((e) => e.id === id);
---

<Layout title="hola">
  <section>
    <h1>{exercise?.title}</h1>
    <p>{exercise?.body}</p>
    <iframe
      src={`/solutions/${id}`}
      width="100%"
      title={`SoluciÃ³n del ejercicio`}
    >
    </iframe>
  </section>
</Layout>

<style>
  section {
    padding: 0 1rem;

    p {
      margin: 1.5rem 0 2rem 0;
    }
  }

  iframe {
    border: none;
    width: 100%;
    height: 300px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style>
