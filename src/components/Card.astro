---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href}>
  <h2>{title}</h2>
  <p>{body}</p>
  <p id="solution-link">Soluci√≥n</p>
</a>

<style>
  a {
    display: flex;
    flex-direction: column;
    padding: 0.7rem;
    border-radius: 10px;
    background-image: linear-gradient(
      108.7deg,
      rgba(221, 22, 224, 1) 11%,
      rgba(111, 22, 190, 1) 88.2%
    );
    text-decoration: none;
    color: #ffffff;

    h2 {
      font-size: clamp(18px, 1.5vw, 36px);
    }

    p {
      margin-top: 0.5rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      font-size: clamp(16px, 1.2vw, 32px);
    }

    #solution-link {
      margin-top: 1rem;
      color: #000000;
      width: 60%;
      text-align: center;
      padding: 0.2rem 1rem;
      background-color: #ffffff;
      border-radius: 0.8rem;
      align-self: center;
    }
  }
</style>
